{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contenu</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contenu.id }}</td>
            </tr>
            <tr>
                <th>Descriptiontext</th>
                <td>{{ contenu.descriptionText }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ contenu.titre }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ contenu.image }}</td>
            </tr>
            <tr>
                <th>Id_etat</th>
                <td>{% if contenu.idetat %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contenu_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('contenu_edit', { 'id': contenu.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
